<div class="row" id="time_slot">
    <%= form_for @time_slot, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="col-sm-9 col-md-6">
      <% if @time_slot.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@time_slot.errors.count, "error") %> prohibited this time_slot from being saved:</h2>
          <ul class='list-unstyled'>
          <% @time_slot.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <%= f.label :name, :class => 'col-xs-5 col-md-4 control-label' %>
        <div class="col-xs-7 col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "name" %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :start_at, :class => 'col-xs-5 col-md-4 control-label' %>
        <div class="col-xs-7 col-md-8 form-inline start_end_date">
          <%= f.time_select :start_at, {:minute_step => 05}, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :end_at, :class => 'col-xs-5 col-md-4 control-label' %>
        <div class="col-md-8 col-sm-8 col-xs-7 form-inline start_end_date">
          <%= f.time_select :end_at, {:minute_step => 05}, class: 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :padma_uid, :class => 'col-xs-5 col-md-4 control-label' %>
        <div class="col-xs-7 col-md-8 instrutor_select">
          <%= f.select :padma_uid, current_user.current_account.usernames, {}, class: 'selectpicker' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :cultural_activity, :class => 'col-xs-5 col-md-4 control-label' %>
        <div class="col-xs-7 col-md-8">
          <%= f.check_box :cultural_activity %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :schedule, :class => 'col-xs-5 col-md-4 control-label' %>
        <div class="col-xs-7 col-md-8">
          <%= select_tag "dayname", options_for_select(Date::DAYNAMES, already_selected_day_name), multiple: true, class: 'multiselect'%>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :padma_contacts, :class => 'col-xs-5 col-md-4 control-label' %>
        <div class="col-xs-7 col-md-8">
          <ul class='list-unstyled' id="time_slot_students">
            <% @time_slot.contacts.each do |c| %>
              <li>
                <%= hidden_field_tag "time_slot[padma_contacts][]", c.padma_id %><%= link_to "#{c.name}", "#", :class => "delete" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <% if @time_slot.persisted? -%>
        <div class='form-group'>
          <%= f.label :add_a_contact, :class => 'col-xs-5 col-md-4 control-label' %>
          <div class="col-xs-7 col-md-8">
            <%= select_tag :padma_contacts_select, options_for_select({"" => :empty, "All students" => :all_students}.merge(Hash[current_user.current_account.usernames.map {|username| ["#{username}'s students", username].flatten}])), class: 'selectpicker select_btn_width' %>
            <%= image_tag("ajax-loader.gif", id:"loading") %>
            <fieldset id="time_slot_padma_contacts">
              <%= render :partial => 'shared/padma_contacts' %>
            </fieldset>
          </div>
        </div>
      <% end -%>
    </div>
    <div class="col-md-12 form-actions">
      <hr />
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Show', @time_slot, :class => 'btn btn-default' if @time_slot.persisted? %>
      <%= link_to t('destroy'), @time_slot, :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
      <%= link_to 'Cancel', time_slots_path, :class => 'btn btn-link' %>
    </div>
    <% end %>
</div>