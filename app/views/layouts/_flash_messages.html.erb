<% if flash.present? %>
  <% if !flash.notice.blank? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash.notice %>
    </div>
  <% end %>
  <% if !flash.alert.blank? %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash.alert %>
    </div>
  <% end %>
<% end %>
