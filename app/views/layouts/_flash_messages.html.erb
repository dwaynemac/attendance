<% if flash.present? %>
  <% if flash.notice.present? && !flash_notice_is_login_message? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash.notice %>
    </div>
  <% end %>
  <% if flash.alert.present? %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash.alert %>
    </div>
  <% end %>
<% end %>
