<li class="list-group-item <%= 'today' if date.today? %>" data-target="trial_selector.option">
  <header class='timeslot-head'><%= time_slot.name %></header>
  <div class='timeslot-content'>
    <div class='timeslot-description'>
      <p><%= timeslot_description(time_slot, nil) %></p>
    </div>
    <div class='timeslot-controls'>
      <%= link_to t('.select'),
                  '#',
                  data: {
                    action: 'click->trial_selector#selectOption',
                    time_slot_id: time_slot.id,
                    trial_on: date
                  },
                  class: 'btn btn-primary btn-xs btn-block' %>
    </div>
  </div>
</li>